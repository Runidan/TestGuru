<tr>
  <td class="align-middle">
    <%= content_tag :span, "#{test.title} (#{test.questions.count})", class: 'test-title', data: { test_id: test.id }%>
    <%= render 'form_inline', test: test == @test ? @test : test %>
  </td>
  <td class="text-center align-middle"><%= test_level(test) %></td>
  <td class="align-middle"><%= link_to t('global.show'), admin_test_path(test), class: 'text-decoration-none' %></td>
  <td class="align-middle">
    <%= link_to t('global.edit'), 
                edit_admin_test_path(test), 
                data: { test_id: test.id },
                class: "form-inline-link text-decoration-none" %>
  </td>
  
  <td class="align-middle"><%= link_to t('global.delete'),
          admin_test_path(test),
          method: :delete,
          data: {confirm: t('global.confirm')},
          class: "text-decoration-none" %></td>
</tr>
