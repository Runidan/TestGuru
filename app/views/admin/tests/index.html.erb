<% if @tests.present?%>
<div class="row justify-content-center">
  <div class="col col-md-8">
    <%= link_to t('.new_test'), new_admin_test_path, class: 'btn btn-primary mb-3' %>
    <h2><%= t('.header') %></h2>

    <table class="table table-hover mt-3 mb-3 table-bordered">
      <thead  class="table-light">
          <tr>
            <th scope="col" class="text-center"><%= t('.tests') %></th>
            <th scope="col" class="text-center"><%= t('.level') %></th>
            <th scope="col" colspan = 3 class="text-center"><%= t('.actions') %></th>
          </tr>
        </thead>
        <tbody class="table-group-divider">
          <%= render @tests %>
        <tbody>
    </table>
  </div>
</div>
<% else %>
  <p><%= t('.notests') %></p>
<% end %>
