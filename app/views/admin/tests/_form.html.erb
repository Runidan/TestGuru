<%= form_with model:[:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
  <%= form.label :title %>
  <%= form.text_field :title, id: :test_title %></p>
  <p>
  <%= form.label :level %>
  <%= form.text_field :level, id: :test_level %></p>

  <p>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :minutes_for_pass %>:
    <%= form.number_field :minutes_for_pass, id: :minutes_for_pass, min: 1, step: 1 %>
  </p>
  
  <%= hidden_field(:test, :author_id, value: current_user.id) %>
  <%= form.submit %>
<% end %>
