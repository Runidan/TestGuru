<% if @tests.present?%>

<div class="row justify-content-center">
  <div class="col col-md-8">

  <h2><%= t('.header') %></h2>
    <table class="table table-hover mt-3 mb-3 table-bordered align-middle">
      <thead  class="table-light">
        <tr>
          <th><%= t('.tests') %></th>
          <th class="text-center"><%= t('.level') %></th>
          <th class="text-center"><%= t('.time') %></th>
          <th class="text-center"><%= t('.actions') %></th>
        </tr>
      </thead>
      <tbody  class="table-group-divider">
        <%= render @tests %>
      <tbody>
    </table>
  </div>
</div>
<% else %>
  <p><%= t('.notests') %></p>
<% end %>
