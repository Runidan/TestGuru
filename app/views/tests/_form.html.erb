<%= form_with model: @test, local: true do |form| %>
  <%= render 'shared/errors', resource: @test%>

  <p>
  <%= form.label :title, "Название" %>
  <%= form.text_field :title, id: :test_title %></p>
  <p>
  <%= form.label :level, "Сложность" %>
  <%= form.text_field :level, id: :test_level %></p>

  <p>
    <%= form.label :category_id %>:
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  
  <%= hidden_field(:test, :author_id, value: 1)%>
  <%= form.submit %>
<% end %>